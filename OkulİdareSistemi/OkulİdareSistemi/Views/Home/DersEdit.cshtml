@model OkulİdareSistemi.Models.Ders
@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}


@using (Html.BeginForm("DersEdit", "Home", FormMethod.Post))
{
    <div class="col-lg-12">
        <div class="card card-horizontal card-default card-md mb-4">
            <div class="card-header">
                <h3><b>DERS GÜNCELLEME</b></h3>
            </div>
            <div class="card-body py-md-30">
                <div class="horizontal-form">
                    <form action="#">
                        <div style="background-color:darkred; text-align:center; align-items:center;">
                            <h3 style="color: white;">@ViewBag.Message</h3>
                        </div>
                        <div class="form-group row mb-25">
                            <div class="col-sm-3 d-flex aling-items-center">
                                <label for="inputEmailIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">
                                    Ders Adı
                                </label>
                            </div>
                            <div class="col-sm-9">
                                <div class="with-icon">
                                    @Html.EditorFor(model => model.DersAdi, new { htmlAttributes = new { @class = "form-control  ih-medium ip-gray radius-xs b-light", id = "inputEmailIcon", placeholder = "ders adı" } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-25">
                            <div class="col-sm-3 d-flex aling-items-center">
                                <label for="inputEmailIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">
                                    Kredisi
                                </label>
                            </div>
                            <div class="col-sm-9">
                                <div class="with-icon">
                                    @Html.EditorFor(model => model.Kredisi, new { htmlAttributes = new { @class = "form-control  ih-medium ip-gray radius-xs b-light", id = "inputEmailIcon", placeholder = "kredisi" } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-25">
                            <div class="col-sm-3 d-flex aling-items-center">
                                <label for="inputEmailIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">
                                    Öğretmeni
                                </label>
                            </div>
                            <div class="col-sm-9">
                                <div class="with-icon">
                                    @Html.DropDownListFor(model => model.OkulYonetimId, (List<SelectListItem>)ViewBag.DDLOgretmenler, new { @class = "form-control  form-control-lg text-center" })
                                </div>
                            </div>
                        </div>
                        <div class="layout-button mt-25">
                            <input type="submit" value="Güncelle" class="btn btn-primary btn-default btn-squared px-30" style="width:100%" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}



